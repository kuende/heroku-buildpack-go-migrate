#!/bin/bash
# usage: bin/compile <build-dir> <cache-dir> <env-dir>

set -eo pipefail

buildpack=$(dirname $(dirname $0))

# Add bundled binaries to path.
arch=$(uname -m|tr A-Z a-z)
if test $arch = x86_64
then arch=amd64
fi
plat=$(uname|tr A-Z a-z)-$arch

PATH=$buildpack/$plat/bin:$PATH

warn() {
    echo >&2 " !     $@"
}

if [ -z $MIGRATE_PATH ]
then
    warn "MIGRATE_PATH is not set"
    exit 1
fi

if [ -z $MIGRATE_DATABASE_URL ]
then
    warn "MIGRATE_DATABASE_URL is not set"
    exit 1
fi

# Run migration.
migrate -verbose -path="$MIGRATE_PATH" -database="$MIGRATE_DATABASE_URL" up
